<h4 class="media-heading" id="<%=item.id%>">
	<%= item.name %>
	<%= link_to "", user_item_path(item.user_id, item.id), method: :delete, class: 'glyphicon glyphicon-remove', style: "color: red;", remote: true, data: { confirm: 'Are you sure?' } %>
	<small>
		<span class="glyphicon glyphicon-ok"></span> --- Expires in <%= distance_of_time_in_words(Time.now, item.expires_at, include_seconds: true) %>
	</small>
</h4>